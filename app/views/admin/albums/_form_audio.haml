.arl_form_title
  = album_statement_audio_count(album)

- if album.does_have_audio
  = form_with(model: [:admin, album], url: admin_album_path(album, pane: :audio), local: true, class: :arl_form, method: :patch) do |f|
    .arl_form_data
      %table.test_form_data_joins
        %thead
          %tr.test_form_data_joins_headings
            %th.test_form_data_joins_heading title
            %th.test_form_data_joins_heading order
            %th.test_form_data_joins_heading= icon_remove
        %tbody
          = f.fields_for :album_audio do |aa|
            %tr.test_form_data_joins_values
              %td.test_form_data_joins_value= audio_reference_admin_link(aa.object.audio)
              %td.test_form_data_joins_value= aa.text_field :album_order, autocomplete: :off, size: 4, class: :arl_form_data_number_field
              %td.test_form_data_joins_value= aa.check_box :_destroy, class: :test_form_data_joins_value_destroy
    .arl_form_actions
      = f.submit class: :arl_button_form_submit
      %aside.arl_form_action_explanation= "will also detatch any audio with '#{icon_destroy}' box checked"

= render 'form_elements/spacer'

.arl_form_title
  Add audio
.arl_form_actions
  .arl_admin_resource_alt_buttons
    = album_audio_admin_button_to_new_join_single(album)
    = album_audio_admin_button_to_new_import(album)
    = album_audio_admin_button_to_new_upload(album)
    = album_audio_admin_button_to_new_join_by_keyword(album)
