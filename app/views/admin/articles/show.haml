= html_head_title_extend! :articles, @article.title

.arl_admin_resource_header
  .arl_admin_resource_header_class= "article"
  .arl_admin_resource_header_title= "#{@article.title}"
  .arl_admin_resource_header_buttons
    = article_admin_button_to_new
    = article_admin_button_to_previous(@article_neighbors.previous)
    = article_admin_button_to_edit(@article)
    = article_admin_button_to_next(@article_neighbors.next)
    = article_admin_button_to_index
  = render '/admin/articles/admin_article_stats', article: @article

.arl_articles_show
  = render 'show_title', article: @article
  = render 'show_text', article: @article
