= form_with(model: [:admin, audio], url: admin_audio_refresh_id3_path(audio, pane: :id3), local: true, method: :patch, class: :arl_form) do |f|
  .arl_form_title
    Audio ID3

  %ul.test_form_explanation
    %li.test_form_explanation_caveat Press "Update Auto" to reload the following information from the audio recording file.
  %ul.test_form_explanation
    %li.test_form_explanation_warning This cannot be undone.

  .arl_form_data
    .test_form_data_attr
      .test_form_data_attr_label Artist
      .test_form_data_attr_value= audio.artist
    .test_form_data_attr
      .test_form_data_attr_label Duration
      .test_form_data_attr_value= audio.duration_as_text
    .test_form_data_attr
      .test_form_data_attr_label Artist
      .test_form_data_attr_value= audio.artist
    .test_form_data_attr
      .test_form_data_attr_label Date
      .test_form_data_attr_value= audio.year

  .arl_form_actions
    = f.submit class: :arl_button_form_submit
