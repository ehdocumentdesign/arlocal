.arl_form_title
  Import audio

= form_with(model: [:admin, event], url: admin_event_audio_create_from_import_path(event), local: true, class: :arl_form) do |f|
  = f.fields_for :audio, event.audio.build do |e|
    .arl_form_data
      = render 'form_elements/text_field', attribute: :source_catalog_file_path, form: e, aside: "#{catalog_filesystem_dirname(trailing_separator: true)}"
    .arl_form_actions
      = f.submit class: :arl_button_form_submit
