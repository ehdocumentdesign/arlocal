.arl_form_title
  = infopage_statement_pictures_count(info_page)
- if info_page.does_have_pictures
  = form_with(model: [:admin, info_page], url: admin_info_path(info_page, pane: :pictures), local: true, class: :arl_form, method: :patch) do |f|
    .arl_form_data
      %table.arl_form_data_attr.arl_form_data_resource_table
        %tr
          %th.arl_form_data_resource_heading title
          %th.arl_form_data_resource_heading group
          %th.arl_form_data_resource_heading order
          %th.arl_form_data_resource_remove= icon_remove
        = f.fields_for :infopage_pictures do |ip|
          %tr
            %td.arl_form_data_resource_value= picture_reference_admin_picture(il.object.infopageable)
            %td.arl_form_data_resource_value= ip.select :infopage_group, @form_metadata.selectables.item_groups, { selected: ip.object.infopage_group }, { class: :arl_form_data_select }
            %td.arl_form_data_resource_value= ip.text_field :infopage_group_order, autocomplete: :off, size: 4, class: :arl_form_data_number_field
            %td.arl_form_data_resource_remove= ip.check_box :_destroy, class: :arl_form_data_checkbox_destroy
    .arl_form_actions
      = f.submit class: :arl_button_form_submit
      %aside.arl_form_action_explanation= "will also detatch any pictures with '#{icon_destroy}' box checked"

- if selectable.does_have_pictures
  = form_with(model: [:admin, info_page], url: admin_info_path(pane: :pictures), local: true, class: [:arl_form, :arl_border_top], method: :patch) do |f|
    .arl_form_title
      Select an picture
    .arl_form_data
      = f.fields_for :infopage_pictures, info_page.infopage_pictures.build do |ip|
        = render 'admin/shared/form_picture_selector', form: ip, picture_options: selectable.pictures
    .arl_form_actions
      = f.submit class: :arl_button_form_submit
