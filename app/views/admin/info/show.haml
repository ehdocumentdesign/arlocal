= html_head_title_extend! 'info'

.arl_admin_resource_header
  .arl_admin_resource_header_title= "Editing Info Page"
  .arl_admin_resource_header_buttons
    = button_admin_to_edit edit_admin_info_path
  = render '/admin/info/admin_info_stats', info_page: @info_page

.arl_info_show
  - if @info_page.does_have_items_group_top
    .arl_info_show_group
      .arl_info_show_group_nil
        - @info_page.items_group_top.each do |item|
          = render 'show_info_item', item: item
  - if @info_page.does_have_items_group_bottom
    .arl_info_show_group
      .arl_info_show_group_a
        - @info_page.items_group_left.each do |item|
          = render 'show_info_item', item: item
      .arl_info_show_group_b
        - @info_page.items_group_right.each do |item|
          = render 'show_info_item', item: item
