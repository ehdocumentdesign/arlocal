.arl_form_title
  = infopage_statement_links_count(infopage)
- if infopage.does_have_links

  = form_with(model: [:admin, infopage], url: admin_infopage_path(infopage, pane: :links), local: true, class: :arl_form, method: :patch) do |f|
    .arl_form_data
      %table.test_form_data_joins
        %thead
          %tr.test_form_data_joins_headings
            %th.test_form_data_joins_heading title
            %th.test_form_data_joins_heading group
            %th.test_form_data_joins_heading order
            %th.test_form_data_joins_heading= icon_remove
        %tbody
          = f.fields_for :infopage_links do |il|
            %tr.test_form_data_joins_values
              %td.test_form_data_joins_value= link_reference_admin_link(il.object.infopageable)
              %td.test_form_data_joins_value= il.select :infopage_group, @form_metadata.selectables.item_groups, { selected: il.object.infopage_group }, { class: :test_form_data_attr_input_select }
              %td.test_form_data_joins_value= il.text_field :infopage_group_order, autocomplete: :off, size: 4, class: :test_form_data_attr_input_text_field
              %td.test_form_data_joins_value= il.check_box :_destroy, class: :test_form_data_joins_value_destroy
    .arl_form_actions
      = f.submit class: :arl_button_form_submit
      %aside.arl_form_action_explanation= "will also detatch any links with '#{icon_destroy}' box checked"

= render 'form_elements/spacer'

.arl_form_title
  Add link
.arl_form_actions
  .arl_admin_resource_alt_buttons
    = infopage_link_admin_button_to_new_join_single(infopage)
