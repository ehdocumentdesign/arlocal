.arl_form_title
  = keyword_statement_events_count(keyword)

- if keyword.does_have_events
  /= button_to 'unkeyword events', admin_unkeyword_events_path(keyword.id, pane: :events), method: :delete, class: :arl_button_unkeyword
  = form_with(model: [:admin, keyword], url: admin_keyword_path(keyword, pane: :events), local: true, method: :patch, class: :arl_form) do |f|
    .arl_form_data
      %table.test_form_data_joins
        %thead
          %tr.test_form_data_joins_headings
            %th.test_form_data_joins_heading event title
            %th.test_form_data_Joins_heading= icon_remove
        %tbody
          = f.fields_for :event_keywords do |ek|
            %tr.test_form_data_joins_values
              %td.test_form_data_joins_value= event_reference_admin_link(ek.object.event)
              %td.test_form_data_joins_value= ek.check_box :_destroy, class: :test_forms_data_joins_value_destroy
    .arl_form_actions
      = f.submit class: :arl_button_form_submit
      %aside.arl_form_action_explanation
        = "will detach any albums with the #{icon_remove} box checked."

= render 'form_elements/spacer'

.arl_form_title
  Add to event
.arl_form_actions
  .arl_admin_resource_alt_buttons
    = keyword_event_admin_button_to_new_join_single(keyword)
