%dl.arl_keywords_show_joins
  .arl_metadata_pair
    %dt.arl_metadata_key.arl_metadata_block= keyword_statement_pictures_count(keyword)
    - if keyword.does_have_pictures
      %dd.arl_metadata_value.arl_metadata_block
        %ul.arl_metadata_value_list
          - keyword.pictures.order_by_slug_asc.each do |picture|
            %li.arl_metadata_value_list_item
              = link_to picture.title, admin_picture_path(picture.id_public), class: :arl_link_resource
