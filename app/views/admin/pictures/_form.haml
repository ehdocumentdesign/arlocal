= form_with(model: [:admin, picture], local: true, class: :arl_form) do |f|
  .arl_form_picture
    = picture_preferred_tag(picture, html_class: :arl_admin_pictures_show_image)
  .arl_form_title
    Picture details
  .arl_form_data
    = render 'form_elements/parseable_field', attribute: :title,                  form: f, selectable: selectable
    = render 'form_elements/check_box',       attribute: :published,              form: f
    = render 'form_elements/check_box',       attribute: :indexed,                form: f
    -# = render 'form_elements/slug_field',      attribute: :slug,                   form: f, arlocal_settings: @arlocal_settings
    = render 'form_elements/parseable_area',  attribute: :credits,                form: f, selectable: selectable
    = render 'form_elements/parseable_area',  attribute: :description,            form: f, selectable: selectable
    = render 'form_elements/check_box',       attribute: :show_can_display_title, form: f
    = render 'form_elements/auto_keyword',    attribute: :picture_keywords,       form: f, auto_keyword: @auto_keyword
  .arl_form_actions
    = f.submit class: :arl_button_form_submit
