.arl_form_title
  = picture_statement_albums_count(picture)

- if picture.does_have_albums
  = form_with(model: [:admin, picture], url: admin_picture_path(picture, pane: :albums), local: true, method: :patch, class: :arl_form) do |f|
    .arl_form_data
      %table.test_form_data_joins
        %thead
          %tr.test_form_data_joins_headings
            %th.test_form_data_joins_heading album title
            %th.test_form_data_joins_heading= icon_remove
        %tbody
          = f.fields_for :album_pictures do |ap|
            %tr.test_form_data_joins_values
              %td.test_form_data_joins_value= album_reference_admin_link(ap.object.album)
              %td.test_form_data_joins_value= ap.check_box :_destroy, class: :test_form_data_joins_value_destroy
    .arl_form_actions
      = f.submit class: :arl_button_form_submit
      %aside.arl_form_action_explanation
        = "will detach any albums with the #{icon_remove} box checked."

= render 'form_elements/spacer'

.arl_form_title
  Add to album
.arl_form_actions
  .arl_admin_resource_alt_buttons
    = picture_album_admin_button_to_new_join_single(picture)
