= html_head_title_extend! :pictures, @picture.slug

.arl_admin_resource_header
  .arl_admin_resource_header_class= "picture"
  .arl_admin_resource_header_buttons
    = picture_admin_button_to_new
    = picture_admin_button_to_new_import
    = picture_admin_button_to_new_upload
    = picture_admin_button_to_index
  .arl_admin_resource_header_title= "#{@picture.title}"
  .arl_admin_resource_header_buttons
    = picture_admin_button_to_previous(@picture_neighbors.previous)
    = picture_admin_button_to_edit(@picture)
    = picture_admin_button_to_next(@picture_neighbors.next)
  = render '/admin/pictures/admin_picture_stats', picture: @picture

.arl_admin_pictures_show
  = render 'show_image', picture: @picture
  = render 'show_details', picture: @picture
  = render 'show_joined_resources', picture: @picture
