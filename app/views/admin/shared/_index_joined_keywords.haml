.arl_admin_resource_joined
  .arl_admin_resource_joined_heading
    = resource_joined_keywords_count_statement(resource)
  - if resource.does_have_keywords
    .arl_admin_resource_joined_others
      - resource.keywords.order_by_title_asc.each do |keyword|
        .arl_admin_resource_joined_other
          = keyword.title
