= form_with(model: [:admin, video], local: true, class: :arl_form) do |f|
  .arl_form_video
    .arl_form_title
      video sourcedetails
    .arl_form_data
      = render 'form_elements/select', attribute: :source_type, form: f, selectable: video.source_types
      = render 'form_elements/text_field',      attribute: :attachment,            form: f
      = render 'form_elements/text_field',       attribute: :source_catalog_file_path,        form: f
      = render 'form_elements/text_field',       attribute: :source_url,          form: f
    .arl_form_actions
      .arl_form_action_submit
        = f.submit class: :arl_button_form_submit
