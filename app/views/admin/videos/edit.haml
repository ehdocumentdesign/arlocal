= html_head_title_extend! "editing video #{@video.title}"

.arl_admin_resource_header
  .arl_admin_resource_header_title= "editing video"
  .arl_admin_resource_header_title= "#{@video.title}"
  .arl_admin_resource_header_buttons
    = video_admin_button_to_new
    = video_admin_button_to_edit_previous(@video_neighbors.previous, arlocal_settings: @arlocal_settings, current_pane: @form_metadata.current_pane)
    = video_admin_button_to_done_editing(@video)
    = video_admin_button_to_edit_next(@video_neighbors.next, arlocal_settings: @arlocal_settings, current_pane: @form_metadata.current_pane)
    = video_admin_button_to_index
  = render '/admin/videos/admin_video_stats', video: @video
  = render '/admin/shared/form_errors', resource: @video


%nav.arl_admin_resource_edit_nav
  - @form_metadata.navbar_categories.each do |category|
    = video_admin_edit_nav_button(video: @video, category: category, current_pane: @form_metadata.current_pane)

.arl_admin_videos_edit
  = render @form_metadata.partial_name, video: @video, selectable: @form_metadata.selectables
