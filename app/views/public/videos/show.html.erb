<%= html_head_title_extend! [:videos, @video.title] %>

<div class='arl_video_show'>

  <div class='arl_video_title'>
    <%= @video.title %>
  </div>

  <div class='arl_video_description'>
    <%= parser_div(@video.description_props) %>
    <%= @video.source_type %>
    <%= @video.source_file_extension %>
    <%= @video.source_file_path %>
    <%= @video.source_file_mime_type %>
  </div>

  <% if @video.source_is_file %>
    <%= render 'show_videojs_file', video: @video %>
  <% elsif @video.source_is_url %>
    <%= render 'show_videojs_url', video: @video %>
  <% end %>
